{
  "name": "ixaris-rebates-calculator",
  "version": "1.0.0",
  "description": "Modern desktop application for calculating Ixaris rebates",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:main": "npx tsc -p tsconfig.main.json",
    "build:all": "npm run build && npm run build:main",
    "start:prod": "npm run build:all && electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3001 && ELECTRON_IS_DEV=true electron .\"",
    "dev:react": "webpack serve --mode=development --config webpack.renderer.config.js",
    "build": "npx webpack --mode=production --config webpack.renderer.config.js",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:portable": "electron-builder --win --publish never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "install-app-deps": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.amadeus.ixaris-rebates-calculator",
    "productName": "Ixaris Rebates Calculator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/better-sqlite3/**/*"
    ],
    "buildDependenciesFromSource": false,
    "mac": {
      "identity": null,
      "target": [
        {
          "target": "default",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "asarUnpack": [
        "**/*.node",
        "**/node_modules/better-sqlite3/**/*"
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.15",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "util": "^0.12.5",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "clsx": "^2.0.0",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.0.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.279.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.15.0",
    "tailwind-merge": "^1.14.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.2"
  },
  "author": "Omar Riestra",
  "license": "MIT",
  "keywords": [
    "electron",
    "react",
    "typescript",
    "desktop",
    "rebates",
    "ixaris",
    "calculator"
  ]
}
